#include <stdio.h>

int main() {
    int n;
    
    printf("Enter a number: ");
    scanf("%d", &n);
    
    printf("Multiplication Table of %d:\n", n);
        for(int j=1;j<=n;){
            for (int i = 1; i <= 10; i++) {
            printf("\n%d * %d = %d",n,i, n * i);
            }
            n--;
        }
    return 0;
}
